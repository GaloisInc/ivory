                        base-compat,
                        pretty >= 1.1,
                        containers >= 0.5,
                        monadLib >= 3.7,
                        template-haskell >= 2.8,
                        filepath,
                        text,
                        dlist >= 0.5,
                        -- QuickCheck >= 2.5.1,
                        th-lift >= 0.5.5,
                        array
  hs-source-dirs:       src
  default-language:     Haskell2010

  ghc-options:          -Wall

  if impl(ghc >= 7.8)
    build-depends:      ghc, hpc, ghc-srcspan-plugin >= 0.2
