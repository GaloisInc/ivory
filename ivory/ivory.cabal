  exposed-modules:      Ivory.Language,
                        Ivory.Language.Effects,
                        Ivory.Language.Monad,
                        Ivory.Language.Area,
                        Ivory.Language.Array,
                        Ivory.Language.Assert,
                        Ivory.Language.Bits,
